    "description": "A wee tool for syncing package.json files in a monorepo with multiple publishable packages, but a single main package.json",
    "keywords": [
        "package.json",
        "monorepo",
        "sync",
        "dependencies"
    ],
    "main": "src/index.js",
    "bin": {
        "mpt": "bin/mpt.js",
        "monorepo-package-tool": "bin/mpt.js"
    },
    "scripts": {
        "prepublishOnly": "tsc"
    },
    "author": "Daniel Studds",
    "homepage": "https://github.com/studds/monorepo-package-tool#readme",
    "license": "MIT",
    "devDependencies": {
        "@types/mkdirp": "^1.0.0",
        "@types/node": "^18.11.8",
        "@types/yargs": "^17.0.13",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "globby": "^13.1.2",
        "mkdirp": "^1.0.4",
        "precinct": "^9.0.1",
        "yargs": "^17.6.0"
    },
    "peerDependencies": {
        "typescript": ">= 4.8.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/studds/monorepo-package-tool.git"
    },
    "bugs": {
        "url": "https://github.com/studds/monorepo-package-tool/issues"
